{
  "manifest_version": 3,
  "name": "vPrompter",
  "version": "1.0.2",
  "description": "Professional prompt templates for AI video generation",
  "permissions": [
    "storage",
    "clipboardWrite",
    "identity",
    "sidePanel"
  ],
  "host_permissions": [
    "https://veo.google.com/*",
    "https://flow.google.com/*",
    "https://veoprompter.netlify.app/*",
    "https://extensionpay.com/*"
  ],
  "oauth2": {
    "client_id": "374428444834-8n6q86s3scnmlpc4t2dsj1mvee76fi1t.apps.googleusercontent.com",
    "scopes": [
      "https://www.googleapis.com/auth/userinfo.email",
      "https://www.googleapis.com/auth/userinfo.profile"
    ]
  },
  "action": {
    "default_icon": {
      "16": "icons/icon16.png",
      "32": "icons/icon32.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "side_panel": {
    "default_path": "popup.html"
  },
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": [
        "https://veo.google.com/*",
        "https://flow.google.com/*"
      ],
      "js": ["content.js"],
      "run_at": "document_idle"
    },
    {
      "matches": ["https://extensionpay.com/*"],
      "js": ["vendor.js"],
      "run_at": "document_start"
    }
  ],
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'none'; base-uri 'self'; connect-src 'self' https://veoprompter.netlify.app https://extensionpay.com;"
  }
}